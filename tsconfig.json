{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "types": [
      "chai",
      "mocha",
      "node"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
  },
  "include": [
    "src/index.ts",
    "**/*.spec.ts"
  ]
}